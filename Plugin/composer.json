{
    "name": "netcommons/announcements",
    "description": "Announcements for NetCommons Plugin",
    "homepage": "http://www.netcommons.org/",
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":              "~2.4",
        "cakephp/debug_kit":            "~2.2",
        "cakedc/migrations":            "~2.2",
        "phpunit/phpunit":              "~3.7.38",
        "sebastian/phpcpd":             "~2.0"
    },
    "require-dev": {
        "mustangostang/spyc":           "dev-master",
        "satooshi/php-coveralls":       "~0.6.1",
        "netcommons/auth":              "dev-master",
        "netcommons/net-commons":       "dev-master"
    },
    "license": "NetCommons License",
    "authors": [
        {
            "name": "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/Announcements/graphs/contributors"
        }
    ],
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "announcements"],
    "config": {
        "vendor-dir": "vendors"
    }
}

